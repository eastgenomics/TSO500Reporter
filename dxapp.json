{
  "name": "TSO500Reporter_v1.0.0",
  "title": "TSO500Reporter_v1.0.0",
  "summary": "DNAnexus app of TSO500Reporter",
  "dxapi": "1.0.0",
  "properties": {
    "githubRelease": "v1.2.2",
    "TSO500ReporterRelease": "v1.0.0"
    },
  "inputSpec": [
    {
      "name": "samplesheet",
      "label": "SampleSheet.csv file from TSO500 local app run",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.csv"
      ],
      "help": "SampleSheet.csv file from TSO500 local app run"
    },
    {
      "name": "combined_variant_output_files",
      "label": "Array of files containing combined variant output statistics",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.tsv"
      ],
      "help": "Array of files containing combined variant output statistics"
    },
    {
      "name": "output",
      "label": "Directory to store output",
      "class": "string",
      "optional": false,
      "default": "report"
    }
  ],
  "outputSpec": [
    {
      "name": "report_html",
      "label": "HTML report",
      "class": "file",
      "patterns": [
        "report.html"
      ],
      "help": "HTML report containing MSI/TMB statistics"
    },
    {
      "name": "report_pdf",
      "label": "PDF report",
      "class": "file",
      "patterns": [
        "report.pdf"
      ],
      "help": "PDF report containing MSI/TMB statistics"
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "minutes": 15
      }
    },
    "interpreter": "bash",
    "file": "src/run.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "1"
  },
  "access": {
    "project": "CONTRIBUTE"
  },
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
